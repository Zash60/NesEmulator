<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- ÁREA DO JOGO (Topo) -->
    <!-- O emulador renderiza atrás, isso é só overlay dos controles -->

    <!-- ================= DIREIONAL (D-PAD) ================= -->
    <!-- Fundo visual do D-Pad (A Cruz) -->
    <View
        android:id="@+id/visualDpadVertical"
        android:layout_width="60dp"
        android:layout_height="160dp"
        android:background="@drawable/btn_control_dpad"
        app:layout_constraintBottom_toBottomOf="@+id/visualDpadHorizontal"
        app:layout_constraintEnd_toEndOf="@+id/visualDpadHorizontal"
        app:layout_constraintStart_toStartOf="@+id/visualDpadHorizontal"
        app:layout_constraintTop_toTopOf="@+id/visualDpadHorizontal" />

    <View
        android:id="@+id/visualDpadHorizontal"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/btn_control_dpad"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Botões Lógicos (Invisíveis mas clicáveis) -->
    <!-- Centro (Neutro) -->
    <View
        android:id="@+id/dpadCenter"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="@+id/visualDpadVertical"
        app:layout_constraintEnd_toEndOf="@+id/visualDpadHorizontal"
        app:layout_constraintStart_toStartOf="@+id/visualDpadHorizontal"
        app:layout_constraintTop_toTopOf="@+id/visualDpadVertical" />

    <!-- Cima -->
    <TextView
        android:id="@+id/keyUp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="#00FFFFFF"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toTopOf="@+id/dpadCenter"
        app:layout_constraintEnd_toEndOf="@+id/dpadCenter"
        app:layout_constraintStart_toStartOf="@+id/dpadCenter" />

    <!-- Baixo -->
    <TextView
        android:id="@+id/keyDown"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="#00FFFFFF"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toBottomOf="@+id/dpadCenter"
        app:layout_constraintEnd_toEndOf="@+id/dpadCenter"
        app:layout_constraintStart_toStartOf="@+id/dpadCenter" />

    <!-- Esquerda -->
    <TextView
        android:id="@+id/keyLeft"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="#00FFFFFF"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintEnd_toStartOf="@+id/dpadCenter"
        app:layout_constraintTop_toTopOf="@+id/dpadCenter"
        app:layout_constraintBottom_toBottomOf="@+id/dpadCenter" />

    <!-- Direita -->
    <TextView
        android:id="@+id/keyRight"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="#00FFFFFF"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintStart_toEndOf="@+id/dpadCenter"
        app:layout_constraintTop_toTopOf="@+id/dpadCenter"
        app:layout_constraintBottom_toBottomOf="@+id/dpadCenter" />

    <!-- Diagonais (Importante para jogos de luta/contra) -->
    <TextView
        android:id="@+id/keyLeftUp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="#00FFFFFF"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="@+id/keyUp"
        app:layout_constraintEnd_toEndOf="@+id/keyLeft" />

    <TextView
        android:id="@+id/keyRightUp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="#00FFFFFF"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="@+id/keyUp"
        app:layout_constraintStart_toStartOf="@+id/keyRight" />

    <TextView
        android:id="@+id/keyLeftDown"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="#00FFFFFF"
        android:clickable="true"
        app:layout_constraintTop_toTopOf="@+id/keyDown"
        app:layout_constraintEnd_toEndOf="@+id/keyLeft" />

    <TextView
        android:id="@+id/keyRightDown"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="#00FFFFFF"
        android:clickable="true"
        app:layout_constraintTop_toTopOf="@+id/keyDown"
        app:layout_constraintStart_toStartOf="@+id/keyRight" />


    <!-- ================= BOTÕES DE AÇÃO ================= -->

    <!-- Botão A (Principal) -->
    <TextView
        android:id="@+id/keyA"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/btn_action_a"
        android:gravity="center"
        android:text="A"
        android:textColor="#CCFFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Botão B (Secundário) -->
    <TextView
        android:id="@+id/keyB"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/btn_action_b"
        android:gravity="center"
        android:text="B"
        android:textColor="#CCFFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/keyA"
        app:layout_constraintEnd_toStartOf="@+id/keyA" />

    <!-- Botão A TURBO (Tiro Rápido) -->
    <TextView
        android:id="@+id/keyATurbo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/btn_action_turbo"
        android:gravity="center"
        android:text="T-A"
        android:textColor="#AAFFFFFF"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/keyA"
        app:layout_constraintStart_toEndOf="@+id/keyA" />

    <!-- Botão B TURBO (Tiro Rápido) -->
    <TextView
        android:id="@+id/keyBTurbo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/btn_action_turbo"
        android:gravity="center"
        android:text="T-B"
        android:textColor="#AAFFFFFF"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/keyB"
        app:layout_constraintEnd_toEndOf="@+id/keyB" />


    <!-- ================= MENU INFERIOR ================= -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/keySelect"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/btn_select_start"
            android:gravity="center"
            android:text="SELECT"
            android:textColor="#B0FFFFFF"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/keyStart"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:background="@drawable/btn_select_start"
            android:gravity="center"
            android:text="START"
            android:textColor="#B0FFFFFF"
            android:textSize="12sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Removi o Player 2 para limpar a tela, pois no celular geralmente joga-se sozinho -->

</androidx.constraintlayout.widget.ConstraintLayout>
